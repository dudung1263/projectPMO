<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    Splash Screen Style -->
    <style name="SplashScreenStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="TextHeadAuthMenu">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/shap1</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="OutlinedBox.Overlay" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="boxStrokeColor">@color/black</item>
    </style>

    <style name="TextNavBar">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="TextInContainerLv2">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TextInContainerLv1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <!-- Tambahkan item style lain yang diperlukan -->
    </style>



</resources>
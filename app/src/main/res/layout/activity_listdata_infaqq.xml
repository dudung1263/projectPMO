<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".listdata_zakat">

    <TextView
        android:id="@+id/infaq_listdataa"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:elegantTextHeight="true"
        android:gravity="center"
        android:text="Data Infaq"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/shap1">

    </TextView>

    <EditText
        android:id="@+id/Search_listinfaq"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/infaq_listdataa"
        android:hint="Cari.."
        android:textColor="@color/black"
        android:textSize="15dp"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:layout_marginBottom="10dp">
    </EditText>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/datalist_infaq"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_below="@id/Search_listinfaq">
    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_listdataa_infaq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="120dp"
        android:backgroundTint="@color/ijomuda"
        android:src="@drawable/ic_add">
    </com.google.android.material.floatingactionbutton.FloatingActionButton>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/home_listdataa_infaq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/ijomuda"
        android:src="@drawable/ic_home">
    </com.google.android.material.floatingactionbutton.FloatingActionButton>

</RelativeLayout>
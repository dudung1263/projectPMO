<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".coba_user">

    <androidx.cardview.widget.CardView
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="63sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/kembalizakat"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                style="@style/TextNavBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Profil"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_back"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/btn_simpan"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:text="Simpan"
                android:textSize="17sp"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView9"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navbar">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="90dp"
            android:paddingHorizontal="15dp">

            <EditText
                android:id="@+id/et_nama_profil"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="15dp"
                android:hint="masukan nama"
                android:textSize="17sp"
                android:inputType="textPersonName"
                android:maxLength="100"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:layout_marginStart="3dp"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@+id/et_nama_profil"
                app:layout_constraintStart_toStartOf="@+id/et_nama_profil"
                app:layout_constraintTop_toTopOf="@+id/et_nama_profil" />

            <EditText
                android:id="@+id/et_username_profil"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="5dp"
                android:hint="masukan username"
                android:inputType="textPersonName"
                android:maxLength="60"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:clickable="false"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_nama_profil" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:layout_marginStart="3dp"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@+id/et_username_profil"
                app:layout_constraintStart_toStartOf="@+id/et_username_profil"
                app:layout_constraintTop_toTopOf="@+id/et_username_profil" />

            <EditText
                android:id="@+id/et_email_profil"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:hint="masukan email"
                android:inputType="textEmailAddress"
                android:layout_marginTop="5dp"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:editable="false"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:clickable="false"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_username_profil" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_marginStart="3dp"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@+id/et_email_profil"
                app:layout_constraintStart_toStartOf="@+id/et_email_profil"
                app:layout_constraintTop_toTopOf="@+id/et_email_profil" />

            <EditText
                android:id="@+id/et_phone_profil"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="5dp"
                android:hint="masukan no hp"
                android:maxLength="15"
                android:inputType="phone"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_email_profil" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Hp"
                android:layout_marginStart="3dp"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@+id/et_phone_profil"
                app:layout_constraintStart_toStartOf="@+id/et_phone_profil"
                app:layout_constraintTop_toTopOf="@+id/et_phone_profil" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lay_et_deskripsi"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alamat"
                app:placeholderText="Desa RT/RW, Kec, Kab | (Patokan)"
                app:placeholderTextColor="@color/black"
                android:layout_marginHorizontal="2dp"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/black"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_phone_profil">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_alamat_profil"
                    style="@style/TextInputEditTextStyle"
                    android:inputType="textMultiLine"
                    android:maxLength="200"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:maxLines="5" />
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView8"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/black"
        app:cardCornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navbar">

        <ImageView
            android:id="@+id/iv_profil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/ikonamil" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_choose_foto"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="100dp"
        android:layout_marginStart="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/cardView8"
        app:layout_constraintEnd_toEndOf="@+id/cardView8"
        app:layout_constraintStart_toStartOf="@+id/cardView8">
        <ImageView
            android:id="@+id/iv_user_prof"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/foto" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/progres_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".8"
        android:gravity="center"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".daftar">


    <ImageView
        android:id="@+id/img6"
        android:layout_width="120dp"
        android:layout_height="85dp"
        android:background="@drawable/img_6">
    </ImageView>
    <ImageView
        android:id="@+id/dft_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:onClick="dft_back"
        android:src="@drawable/back" />
    <ImageView
        android:id="@+id/imgfont2"
        android:layout_marginTop="114dp"
        android:layout_marginStart="14dp"
        android:layout_width="268dp"
        android:layout_height="48dp"
        android:background="@drawable/img_7">
    </ImageView>

    <ScrollView
        android:id="@+id/isi"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/imgfont2">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:layout_below="@id/imgfont2"
            android:orientation="vertical">

            <TextView
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="( Username )"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/nama_daftar"
                android:layout_width="380dp"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shapehitam"
                android:drawableStart="@drawable/orang"
                android:drawablePadding="15dp"
                android:hint="Username"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="20dp">

            </EditText>

            <TextView
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="( Email Aktif )"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold">

            </TextView>

            <EditText
                android:id="@+id/email_daftr"
                android:layout_width="380dp"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/shapehitam"
                android:drawableStart="@drawable/email"
                android:drawablePadding="15dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="20dp"></EditText>

            <TextView
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="( Minimal 8 Karakter )"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/password2_dftr"
                android:layout_width="380dp"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:autofillHints="password"
                android:background="@drawable/shapehitam"
                android:drawableStart="@drawable/paswd"
                android:drawablePadding="15dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="20dp"></EditText>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btndaftar"
                android:layout_width="180dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:onClick="daftar"
                android:background="@drawable/img_5"
                android:text="Daftar"
                android:textSize="24dp"
                android:layout_marginStart="90dp"
                android:textColor="@color/white"
                android:textStyle="bold">
            </androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>
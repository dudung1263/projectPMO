<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".listdata_zakat">

    <TextView
        android:id="@+id/zakat_listdataa"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_marginBottom="5dp"
        android:elegantTextHeight="true"
        android:gravity="center"
        android:text="Data Zakat"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@color/ijomuda">

    </TextView>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/back">

    </ImageView>



    <EditText
        android:id="@+id/Search_listzakat"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/zakat_listdataa"
        android:hint="Cari.."
        android:textColor="@color/black"
        android:textSize="15dp"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:layout_marginBottom="10dp">
    </EditText>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/datalist_zakat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_below="@id/Search_listzakat">
    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_listdataa_zakat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="120dp"
        android:backgroundTint="@color/ijomuda"
        android:src="@drawable/ic_add">
    </com.google.android.material.floatingactionbutton.FloatingActionButton>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/home_listdataa_zakat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/ijomuda"
        android:src="@drawable/ic_home">
    </com.google.android.material.floatingactionbutton.FloatingActionButton>

</RelativeLayout>
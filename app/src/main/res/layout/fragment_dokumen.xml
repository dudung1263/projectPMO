<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dokumen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="0dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/imageView_dokumen"
                android:layout_width="match_parent"
                android:layout_height="150sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="155dp"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/lindata"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/datazakat_dokumen"
                        android:onClick="datazakat"
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="Data Zakat"
                        android:padding="10dp"
                        android:paddingStart="0dp"
                        android:paddingEnd="25dp"
                        android:drawableStart="@mipmap/zakat"
                        android:drawablePadding="0dp"
                        android:background="@drawable/shap1"
                        android:fontFamily="sans-serif-black"
                        android:textStyle="bold"
                        android:textSize="30dp"
                        android:textColor="@color/white">
                    </androidx.appcompat.widget.AppCompatButton>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/datainfaq_dokumen"
                        android:onClick="datainfaq"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="15dp"
                        android:text="Data Infaq"
                        android:padding="10dp"
                        android:paddingStart="0dp"
                        android:paddingEnd="25dp"
                        android:drawableStart="@mipmap/infaq"
                        android:background="@drawable/shap2"
                        android:fontFamily="sans-serif-black"
                        android:textStyle="bold"
                        android:textSize="30dp"
                        android:textColor="@color/white">
                    </androidx.appcompat.widget.AppCompatButton>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/datasodakoh_dokumen"
                        android:onClick="datasodakoh"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="15dp"
                        android:padding="10dp"
                        android:paddingStart="0dp"
                        android:paddingEnd="25dp"
                        android:drawableStart="@mipmap/sodaqoh"
                        android:drawablePadding="0dp"
                        android:text="Data Sodaqoh"
                        android:background="@drawable/shap3"
                        android:fontFamily="sans-serif-black"
                        android:textStyle="bold"
                        android:textSize="30dp"
                        android:textColor="@color/white">
                    </androidx.appcompat.widget.AppCompatButton>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/sholat"
                        android:onClick="jadwalsholat"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="15dp"
                        android:padding="10dp"
                        android:paddingStart="0dp"
                        android:paddingEnd="25dp"
                        android:drawablePadding="0dp"
                        android:layout_marginBottom="20dp"
                        android:text="Jam Sholat"
                        android:background="@drawable/shap3"
                        android:fontFamily="sans-serif-black"
                        android:textStyle="bold"
                        android:textSize="30dp"
                        android:textColor="@color/white">
                    </androidx.appcompat.widget.AppCompatButton>



                </LinearLayout>



            </ScrollView>
        </LinearLayout>
    </RelativeLayout>




</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
                android:id="@+id/img10"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:background="@drawable/img_9">
            <TextView
                android:id="@+id/text1"
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:layout_marginTop="40dp"
                android:text="KELOLA DATA"
                android:layout_marginStart="0dp"
                android:fontFamily="sans-serif-black"
                android:textStyle="bold"
                android:textSize="38dp"
                android:textColor="@color/white"
                android:padding="10dp"
                android:background="@drawable/img_10">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="Data Zakat"
                        android:padding="10dp"
                        android:paddingStart="40dp"
                        android:paddingEnd="25dp"
                        android:drawableStart="@mipmap/zakat"
                        android:drawablePadding="0dp"
                        android:background="@drawable/shap1"
                        android:fontFamily="sans-serif-black"
                        android:textStyle="bold"
                        android:textSize="38dp"
                        android:textColor="@color/white">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="15dp"
                        android:text="Data Infaq"
                        android:padding="10dp"
                        android:paddingStart="40dp"
                        android:paddingEnd="25dp"
                        android:drawableStart="@mipmap/infaq"
                        android:background="@drawable/shap2"
                        android:fontFamily="sans-serif-black"
                        android:textStyle="bold"
                        android:textSize="38dp"
                        android:textColor="@color/white">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="15dp"
                        android:padding="10dp"
                        android:paddingStart="25dp"
                        android:paddingEnd="25dp"
                        android:drawableStart="@mipmap/sodaqoh"
                        android:drawablePadding="0dp"
                        android:text="Data Sodaqoh"
                        android:background="@drawable/shap3"
                        android:fontFamily="sans-serif-black"
                        android:textStyle="bold"
                        android:textSize="38dp"
                        android:textColor="@color/white">
                    </TextView>


                </LinearLayout>



            </ScrollView>
        </LinearLayout>






    </RelativeLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/list_item_sodaqoh"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="170sp"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape3">


        <ImageView
            android:id="@+id/gambarsodaqoh_ds"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_gravity="center"
            android:contentDescription="TODO"
            android:src="@drawable/carigambar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/jenissodaqoh_ds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="20dp"
            android:text="Jenis infaq"
            android:textColor="@color/black"
            android:textSize="15dp"

            app:layout_constraintStart_toEndOf="@+id/gambarsodaqoh_ds"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>

        <TextView
            android:id="@+id/tglsodaqoh_ds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70sp"
            android:text="Tanggal Terima"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/jenissodaqoh_ds"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>

        <TextView
            android:id="@+id/muzakisodaqoh_ds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginStart="20sp"
            android:text="Muzaki/Pemberi"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/gambarsodaqoh_ds"
            app:layout_constraintTop_toBottomOf="@+id/tglsodaqoh_ds">
        </TextView>



        <TextView
            android:id="@+id/ketsodaqoh_ds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"
            android:text="Keterangan"
            android:maxLength="30"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/gambarsodaqoh_ds"
            app:layout_constraintTop_toBottomOf="@+id/muzakisodaqoh_ds">
        </TextView>


        <TextView
            android:id="@+id/penyaluransodaqoh_ds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginStart="20sp"
            android:text="Penyaluran"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/gambarsodaqoh_ds"
            app:layout_constraintTop_toBottomOf="@+id/ketsodaqoh_ds">
        </TextView>


        <TextView
            android:id="@+id/jumlahsodaqoh_ds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah infaq"
            android:layout_marginStart="180dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="30sp"
            app:layout_constraintStart_toEndOf="@+id/gambarsodaqoh_ds"
            app:layout_constraintTop_toBottomOf="@+id/penyaluransodaqoh_ds"/>





    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>


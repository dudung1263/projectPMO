<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".keterangan_infaq">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:background="#46B14B">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Data Laporan Infaq"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/jumlahup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">


            <GridLayout
                android:layout_width="400sp"
                android:layout_height="55sp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:columnCount="2"
                android:rowCount="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="200sp"
                    android:layout_height="55sp"
                    android:layout_rowWeight="1"
                    android:layout_marginStart="0sp"
                    app:cardElevation="15dp">


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="55sp"
                        android:background="@drawable/garis_tepi_ijo"
                        android:orientation="vertical"
                        android:layout_marginRight="2sp">

                        <TextView
                            android:id="@+id/judulinfaq"
                            android:layout_width="wrap_content"
                            android:layout_height="20sp"
                            android:layout_marginLeft="5sp"
                            android:gravity="center"
                            android:text="Pemasukan Infaq"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/julmahinfaq_masuk"
                            android:layout_width="185sp"
                            android:layout_height="25sp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5sp"
                            android:gravity="center"
                            android:text="Rp. "
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="200sp"
                    android:layout_height="55sp"
                    android:layout_rowWeight="1">


                    <LinearLayout
                        android:layout_marginLeft="2sp"
                        android:layout_width="match_parent"
                        android:layout_height="55sp"
                        android:background="@drawable/garis_tepi_ijo"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/jumlahlinfaq"
                            android:layout_width="wrap_content"
                            android:layout_height="20sp"
                            android:layout_marginLeft="5sp"
                            android:gravity="center"
                            android:text="Pengeluaran Infaq"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/julmahinfaq_keluar"
                            android:layout_width="185sp"
                            android:layout_height="25sp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5sp"
                            android:gravity="center"
                            android:text="Rp. "
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </GridLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Diagram Laporan "
                android:padding="5dp"
                android:paddingStart="10sp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="left"
                android:layout_gravity="center_vertical">

            </TextView>
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>
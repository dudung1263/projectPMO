<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ketersngan_zakat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <GridLayout
            android:layout_marginTop="15sp"
            android:layout_width="400sp"
            android:layout_height="55sp"
            android:rowCount="1"
            android:columnCount="2">

            <androidx.cardview.widget.CardView
                android:layout_marginLeft="10sp"
                android:layout_width="200sp"
                android:layout_height="55sp"
                android:layout_rowWeight="1"
                app:cardElevation="15dp">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="55sp"
                    android:background="@color/ijomuda"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/judulzakatfitrah"
                        android:layout_width="wrap_content"
                        android:layout_height="20sp"
                        android:text="Pemasukan Zakat Fitrah"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginLeft="15sp"/>


                    <TextView
                        android:id="@+id/julmahzakatfitrah"
                        android:layout_marginTop="5sp"
                        android:layout_width="150sp"
                        android:layout_height="20sp"
                        android:text="hasil"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginLeft="25sp"/>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="200sp"
                android:layout_height="55sp"
                android:layout_rowWeight="1"
                android:layout_marginLeft="5sp">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="55sp"
                    android:background="@color/ijomuda"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pengeluaranzakat"
                        android:layout_width="wrap_content"
                        android:layout_height="20sp"
                        android:text="Pengeluaran zakat Fitrah"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginLeft="15sp"/>


                    <TextView
                        android:id="@+id/pengeluaranzakatfitrah"
                        android:layout_marginTop="5sp"
                        android:layout_width="150sp"
                        android:layout_height="20sp"
                        android:text="hasil "
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginLeft="25sp"/>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </GridLayout>







        <GridLayout
            android:layout_marginTop="15sp"
            android:layout_width="400sp"
            android:layout_height="55sp"
            android:rowCount="1"
            android:columnCount="2">

            <androidx.cardview.widget.CardView
                android:layout_marginLeft="10sp"
                android:layout_width="200sp"
                android:layout_height="55sp"
                android:layout_rowWeight="1"
                app:cardElevation="15dp">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="55sp"
                    android:background="@color/ijomuda"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pemasukanzakatmal"
                        android:layout_width="150sp"
                        android:layout_height="20sp"
                        android:text="Pemasukan Zakat Mal"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginLeft="25sp"/>


                    <TextView
                        android:id="@+id/pengluaranzakatmal"
                        android:layout_marginTop="5sp"
                        android:layout_width="150sp"
                        android:layout_height="20sp"
                        android:text="hasil"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginLeft="25sp"/>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="200sp"
                android:layout_height="55sp"
                android:layout_rowWeight="1"
                android:layout_marginLeft="5sp">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="55sp"
                    android:background="@color/ijomuda"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/judulzakatmal"
                        android:layout_width="150sp"
                        android:layout_height="20sp"
                        android:text="Pengeluaran Zakat mal"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginLeft="15sp"/>


                    <TextView
                        android:id="@+id/julmahzakatmal"
                        android:layout_marginTop="5sp"
                        android:layout_width="150sp"
                        android:layout_height="20sp"
                        android:text="hasil "
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginLeft="25sp"/>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </GridLayout>




    </LinearLayout>

</FrameLayout>
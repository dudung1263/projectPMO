<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".listdata_zakatmal">

    <TextView
        android:id="@+id/zakatmal_listdataa"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_marginBottom="5dp"
        android:elegantTextHeight="true"
        android:gravity="center"
        android:text="Data Zakat Mal"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="#4CAF50">

    </TextView>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/back">

    </ImageView>



    <EditText
        android:id="@+id/Search_listzakatmal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/zakatmal_listdataa"
        android:hint="Cari.."
        android:textColor="@color/black"
        android:textSize="15dp"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:layout_marginBottom="10dp">
    </EditText>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/datalist_zakatmal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_below="@id/Search_listzakatmal">
    </androidx.recyclerview.widget.RecyclerView>



</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".about_profil">

    <LinearLayout
        android:id="@+id/backabout"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@drawable/img_6">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/kembaliabout"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/kembalizakat">

        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/backabout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tentang"
            android:gravity="center"
            android:textSize="35dp"
            android:textColor="@color/black"
            android:textStyle="bold">

        </TextView>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/shap1">

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/isiabout"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textAlignment="center">

                </TextView>

            </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/img_8">

        </ImageView>

    </LinearLayout>

</RelativeLayout>